  font-weight: 600;
  color: #4b5563;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transition: var(--transition-smooth);
}

.dark .modern-stats-title {
  color: #e2e8f0;
}

/* Enhanced tiny live pill */
.tiny-live-pill {
  background: var(--success-bg);
  border-radius: 9999px;
  padding: 0.2em 0.8em 0.2em 0.5em;
  font-size: 0.78em;
  font-weight: 600;
